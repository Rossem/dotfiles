{
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnType": true,
  "editor.selectionHighlight": false,
  // "editor.minimap.enabled": false,
  "files.autoSave": "onFocusChange",
  "editor.fontSize": 13,
  // "workbench.editor.enablePreviewFromQuickOpen": false,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.editor.tabSizing": "shrink",
  "editor.scrollBeyondLastLine": false,
  "editor.renderWhitespace": "selection",
  "window.zoomLevel": 0,
  "editor.cursorBlinking": "solid",
  // "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.quickOpen.preserveInput": true,
  // Vim
  "vim.leader": " ",
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.debug.silent": true,
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.insert": "line",
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "red",
  // Leader bindings
  "vim.normalModeKeyBindings": [
    // Editor navigation
    {
      "before": [
        "<leader>",
        "n"
      ],
      "commands": [
        "workbench.action.nextEditorInGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "commands": [
        "workbench.action.previousEditorInGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "h"
      ],
      "commands": [
        "workbench.action.navigateLeft"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "j"
      ],
      "commands": [
        "workbench.action.navigateDown"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "k"
      ],
      "commands": [
        "workbench.action.navigateUp"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "l"
      ],
      "commands": [
        "workbench.action.navigateRight"
      ]
    },
    // Jumping
    {
      "before": [
        "<leader>",
        "i"
      ],
      "commands": [
        "extension.vim_ctrl+i"
      ]
    },
    {
      "before": [
        "<leader>",
        "o"
      ],
      "commands": [
        "extension.vim_ctrl+o"
      ]
    },
    // Editor manipulation
    {
      "before": [
        "<leader>",
        "\\"
      ],
      "commands": [
        "workbench.action.newGroupLeft"
      ]
    },
    {
      "before": [
        "<leader>",
        "-"
      ],
      "commands": [
        "workbench.action.newGroupBelow"
      ]
    },
    {
      "before": [
        "<leader>",
        "t",
        "c"
      ],
      "commands": [
        "workbench.action.closeEditorsInGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "t",
        "q"
      ],
      "commands": [
        "workbench.action.closeAllEditors"
      ]
    },
    {
      "before": [
        "<leader>",
        "q"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    // {
    //   "before": ["<leader>", "b"],
    //   "commands": ["workbench.action.quickOpenRecent"]
    // },
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      "before": [
        "<leader>",
        "b"
      ],
      "commands": [
        "breadcrumbs.focusAndSelect"
      ]
    },
    {
      "before": [
        "<leader>",
        ","
      ],
      "commands": [
        // "workbench.action.openSettingsJson"
        "fuzzySearch.activeTextEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "."
      ],
      "commands": [
        "workbench.action.toggleSidebarVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "e"
      ],
      "commands": [
        "workbench.action.keepEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "d"
      ],
      "commands": [
        "editor.action.revealDefinition"
      ]
    },
    {
      "before": [
        "@",
      ],
      "commands": [
        "cursorHome",
      ]
    },
    // {
    //   "before": ["K"],
    //   "after": ["leader", "leader", "k"]
    // },
    // {
    //   "before": ["J"],
    //   "after": ["leader", "leader", "j"]
    // },
    // {
    //   "before": ["<leader>", "i"],
    //   "after": ["y", "i", "\""]
    // },
    // {
    //   "before": ["Y"],
    //   "after": ["y", "$"]
    // }
  ],
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  // "workbench.editor.enablePreview": false,
  // Elixir
  "elixirLS.dialyzerEnabled": false,
  "[elixir]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "editor.formatOnSave": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.macOptionIsMeta": true,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnEnter": "off",
  // "workbench.colorCustomizations": {
  //   "statusBar.background": "#1a1a1a",
  //   "statusBar.noFolderBackground": "#212121",
  //   "statusBar.debuggingBackground": "#263238",
  //   "statusBar.foreground": "#bbbbbb"
  // },
  "elixirLS.suggestSpecs": false,
  "workbench.colorTheme": "One Dark Pro",
  "editor.renderIndentGuides": false,
  "vscode-neovim.neovimInitPath": " ~/.config/nvim/init.vim",
  "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
  "tabnine.experimentalAutoImports": true,
  "elixirLS.fetchDeps": false,
  // Disable auto updates to ElixirLS doesn't get updated to the marketplace
  // version.
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
}